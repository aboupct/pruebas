{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/aboupct/pruebas/main/data_2.csv",
  "encoding": {
    "x": {
      "field": "Curso_abreviado",
      "type": "ordinal",
      "axis": {
        "labelAngle": 0,
        "ticks": false,
        "title": null
      }
    },
    "y": {
      "field": "Matriculados conjunta",
      "type": "quantitative",
      "axis": {
        "ticks": false,
        "title": null
      }
    },
    "color": {
      "field": "Nivel Académico",
      "type": "nominal",
      "scale": {
        "domain": [
          "Grado",
          "Máster",
          "Doctorado"
        ],
        "range": [
          "#0C58A5",
          "#5BC5F2",
          "#163558"
        ]
      },
      "title": "Nivel Académico"
    },
    "order": {"field": "Nivel Académico_ID"}    
  },
  "layer": [{
    "mark": {"type":"bar", "tooltip": true }
  }, {
    "mark": {"type": "text"},
    "encoding": {
     "text": { "field": "Matriculados conjunta"}, 
     "color": {"value": "white"}
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false, "domain": false}
  }
}